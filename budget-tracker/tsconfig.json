{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types/jsx.d.ts"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/types/**/*.d.ts",
    "components/Scene.jsx",
    "components/GameScene.tsx",
    "components/game/src/Game.tsx"
  ],
  "exclude": ["node_modules"]
}
